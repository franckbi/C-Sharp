<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="volumeConverter.MainWindow"
        Title="Volume Converter">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Volume Converter" FontSize="20" HorizontalAlignment="Center"/>

        <TextBox Name="input" Width="150" Watermark="Enter value"/>

        <ComboBox Name="from" Width="150"/>
        <ComboBox Name="to" Width="150"/>

        <Button Content="Convert" Click="Convert"/>
        
        <Label Name="output" FontSize="16" Foreground="Blue"/>
    </StackPanel>
</Window>
